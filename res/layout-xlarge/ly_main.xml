    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" 
        android:layout_marginTop="60dp">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/strClasificacionEventos"
            android:textAppearance="@style/subtitulos2" 
            android:textColor="#70BECD" 
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"            
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/imgTrasmisibles"
                android:layout_width="230dp"
                android:layout_height="250dp"
                android:layout_margin="10dp"
                android:src="@drawable/transmisibles" />

            <ImageView
                android:id="@+id/imgNoTrasmisibles"
                android:layout_width="230dp"
                android:layout_height="250dp"
                android:layout_margin="10dp"
                android:src="@drawable/no_transmisibles" />

            <ImageView
                android:id="@+id/imgExternas"
                android:layout_width="230dp"
                android:layout_height="250dp"
                android:layout_margin="10dp"
                android:src="@drawable/causa_externa" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" 
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="@string/strInformacionSivigila"
            android:textAppearance="@style/subtitulos2"
            android:textColor="#70BECD" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="110dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"            
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/ImageGeneralidadesSivig"
                android:layout_width="230dp"
                android:layout_height="250dp"
                android:layout_margin="10dp"
                android:src="@drawable/conceptos_sivigila" />

            <ImageView
                android:id="@+id/imgAtras"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:src="@drawable/atras"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/imgGeneralidades"
                android:layout_width="230dp"
                android:layout_height="250dp"
                android:layout_margin="10dp"
                android:src="@drawable/directorio" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>