<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".GeneralidadesCuatroBotones" >

    <ImageView
        android:id="@+id/subGeneralidades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:layout_weight="0.5"
        android:src="@drawable/btngeneral" />

    <ImageView
        android:id="@+id/subActores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:layout_weight="0.5"
        android:src="@drawable/btnactores" />

    <ImageView
        android:id="@+id/subFlujoInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:layout_weight="0.5"
        android:src="@drawable/btnflujoinfo" />

    <ImageView
        android:id="@+id/subConceptos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:layout_weight="0.5"
        android:src="@drawable/btnpalabracalve" />

    <ImageView
        android:id="@+id/imgAtrasCuatro"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="8dp"
        android:layout_weight="0.2"
        android:src="@drawable/atras" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="0.5"
        android:text="TextView" />

</LinearLayout>