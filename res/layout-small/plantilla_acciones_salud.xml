<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".Generalidades" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/ac2"
            style="@style/subtitulos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Nombre del evento:" />

        <TextView
            android:id="@+id/lynomevent"
            style="@style/normaltext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="58dp"
        android:layout_marginTop="8dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tx_accIndivi"
                    style="@style/subtitulos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Acciones individuales:" />

                <TextView
                    android:id="@+id/lyAccInd"
                    style="@style/normaltext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tx_accColect"
                    style="@style/subtitulos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Acciones Colectivas:" />

                <TextView
                    android:id="@+id/lyAccCol"
                    style="@style/normaltext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tx_enlaces"
                    style="@style/subtitulos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Link URL:" />

                <TextView
                    android:id="@+id/textsup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:textColor="#000000"
                    android:text="Si requiere mayor información en torno al evento puede consultar el protocolo completo de vigilancia y control del evento en el siguiente Link/URL"
                    android:textAppearance="@style/normaltext" />

                <TextView
                    android:id="@+id/lyURL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:textColor="#0E6F84" />

                <TextView
                    android:id="@+id/textinf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:textColor="#000000"
                    android:text="Si sigue presentando inquietudes respecto a las acciones de control, puede comunicarse con el Grupo de Vigilancia en Salud Pública de la Entidad Territorial de Salud del área donde Ud. está ubicado. " />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/directorio2"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/directorio" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical" >
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
